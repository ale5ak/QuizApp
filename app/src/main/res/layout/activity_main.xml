<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alise.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_question" />

        <EditText
            android:id="@+id/name_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:hint="@string/name_hint"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_question" />

        <RadioGroup
            android:id="@+id/scrollview_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp">

            <RadioButton
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ScrollView" />

            <RadioButton
                android:id="@+id/linear_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LinearLayout" />

            <RadioButton
                android:id="@+id/check_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <RadioButton
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </RadioGroup>

        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/android_question" />

        <EditText
            android:id="@+id/android_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:hint="@string/android_hint"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/primitives_question" />

        <CheckBox
            android:id="@+id/primitives_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="int" />

        <CheckBox
            android:id="@+id/primitives_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="String" />

        <CheckBox
            android:id="@+id/primitives_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="long" />

        <CheckBox
            android:id="@+id/primitives_answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <CheckBox
            android:id="@+id/primitives_answer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:text="boolean" />


        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_question" />

        <RadioGroup
            android:id="@+id/color_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp">

            <RadioButton
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#F44336" />

            <RadioButton
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#2196F3" />

            <RadioButton
                android:id="@+id/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#4CAF50" />

            <RadioButton
                android:id="@+id/brown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#795548" />

        </RadioGroup>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/submit_button"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

    </LinearLayout>
</ScrollView>
